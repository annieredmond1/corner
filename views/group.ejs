<!DOCTYPE html>
<html>
<head>
	<% include ./_head %>
</head>
<body>
<% include ./_nav %>
<% var group; %>
<div class="page-header text-center">
	<h1><%=group.name%></h1>
</div>



<div class="newPrayer" align="center">
  <button type="button" class="btn btn-primary" id="newPrayerButton" data-toggle="modal" data-target="#newPrayerModal">New Prayer</button>
</div>

<div class="col-sm-8 col-sm-offset-2">
  <ul class="list-group prayerList">
    <% for(var i = group.posts.length - 1; i>=0; i--) { %>
      <li class="list-group-item"><%=group.posts[i].content%>
      <div align='right'>
      <figure>
      <img class="profileImage" src="https://trip101.com/assets/default_profile_pic-9c5d869a996318867438aa3ccf9a9607daee021047c1088645fbdfbbed0e2aec.jpg">
      <figcaption><%=group.posts[i].name%></figcaption></figure></div>
      </li>
    <% } %>
  </ul>
</div>




<!-- Modal -->
<div class="modal fade" id="newPrayerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Hey God, are you listening?</h4>
      </div>
      <div class="modal-body">
        <form id="newPost" data-id="<%=group._id %>">
          <div class="form-group">
            <label for="prayerRequester">Name</label>
            <input type="text" name="name" class="form-control" id="" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="prayerContent">Prayer Request</label>
            <input type="text" name="content" class="form-control" id="" > 
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="postButton">Send to Group</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



</body>
</html>